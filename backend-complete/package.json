{
  "name": "museforge-pro-backend",
  "version": "2.0.0",
  "type": "module",
  "description": "Complete open-source music generation backend with AI suggestions",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/python && cp -r src/python/* dist/python/",
    "start": "node dist/server.js",
    "test": "node scripts/test-generation.js",
    "setup": "bash scripts/setup-models.sh",
    "vercel-build": "npm run build"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.0",
    "dotenv": "^16.4.5",
    "execa": "^9.0.0",
    "fastify": "^4.28.1",
    "fluent-ffmpeg": "^2.1.3",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "sql.js": "^1.11.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  }
}
