# Database
DATABASE_URL="file:./dev.db"

# API Authentication
API_KEY="your-api-key-here"

# AI Services
GEMINI_API_KEY="your-gemini-api-key-here"

# Storage Configuration
STORAGE_TYPE="local"  # or "s3"
ASSETS_DIR="./assets"

# S3 Configuration (if STORAGE_TYPE=s3)
S3_BUCKET="your-bucket-name"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-key"

# Server Configuration
# API Keys (REQUIRED - get from respective providers)
# Google AI Studio: https://makersuite.google.com/app/apikey (FREE tier available)
GOOGLE_API_KEY=your_gemini_api_key_here

# OpenAI Platform: https://platform.openai.com/api-keys (Pay as you go)
OPENAI_API_KEY=your_openai_api_key_here

# Replicate: https://replicate.com/account/api-tokens (Pay per prediction)
REPLICATE_API_TOKEN=your_replicate_token_here

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Queue Configuration
QUEUE_CONCURRENCY=2
QUEUE_MAX_RETRIES=3
QUEUE_BACKOFF_MS=1000

# Metrics
METRICS_ENABLED=true

# Legacy (for compatibility)
AUTH_SECRET="replace-me"
RATE_LIMIT_PER_MIN=60
USE_S3=false
EXTERNAL_AUDIO_URL=
EXTERNAL_AUDIO_TOKEN=
EXTERNAL_VIDEO_URL=
EXTERNAL_VIDEO_TOKEN=
