{
  "name": "musewave-backend",
  "version": "1.0.0",
  "description": "Backend for MuseWave music and video generation",
  "main": "dist/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:debug": "NODE_ENV=development LOG_LEVEL=debug tsx watch src/index.ts",
    "build": "tsc && npm run build:copy-assets",
    "build:copy-assets": "cp -r python dist/ && cp -r assets dist/ 2>/dev/null || true",
    "start": "NODE_ENV=production node dist/index.js",
    "start:cluster": "NODE_ENV=production pm2 start ecosystem.config.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "docker:build": "docker build -t musewave-backend .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "metrics": "curl http://localhost:3000/metrics",
    "health": "curl http://localhost:3000/health"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.623.0",
    "@fastify/autoload": "^5.8.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.4",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/websocket": "^10.0.1",
    "@ffmpeg/core": "^0.12.6",
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.18.0",
    "bullmq": "^5.14.0",
    "dotenv": "^16.4.5",
    "eventemitter3": "^5.0.1",
    "execa": "^9.6.0",
    "fastify": "^4.29.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.2.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "nanoid": "^5.0.4",
    "openai": "^6.8.1",
    "opossum": "^8.1.4",
    "p-limit": "^6.1.0",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0",
    "pino": "^9.3.0",
    "pino-http": "^10.3.0",
    "prom-client": "^15.1.0",
    "rate-limiter-flexible": "^5.0.3",
    "replicate": "^1.3.1",
    "ulid": "^2.3.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "pino-pretty": "^11.1.0",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
