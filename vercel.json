{
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist",
  "installCommand": "npm install --legacy-peer-deps",
  "headers": [
    {
      "source": "/(.*\\.wav)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "audio/wav"
        }
      ]
    },
    {
      "source": "/(.*\\.mp3)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "audio/mpeg"
        }
      ]
    },
    {
      "source": "/(.*\\.mp4)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "video/mp4"
        }
      ]
    },
    {
      "source": "/(.*\\.webm)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "video/webm"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/:path(.*\\.(?:wav|mp3|mp4|webm|ogg|flac))",
      "destination": "/:path"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}