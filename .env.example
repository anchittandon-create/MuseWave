# MuseWave Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit your actual .env file to Git!

# Google Gemini AI API Key (REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Text-to-Speech (REQUIRED for vocals)
# Service account JSON file path for Google Cloud TTS
# https://cloud.google.com/text-to-speech/docs/before-you-begin
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# API Configuration
VITE_API_BASE_URL=http://localhost:4000

# Backend Neo URL (optional, defaults to localhost:3001)
BACKEND_NEO_URL=http://localhost:3001

# Database Configuration
PORT=8080
DATABASE_URL="file:./dev.db"

# Asset Storage (Local or Cloudflare R2)
ASSETS_DIR=./assets
USE_S3=false

# Cloudflare R2 Storage (RECOMMENDED for production - FREE egress bandwidth!)
# Get these from: Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_BUCKET_NAME=musewave-assets
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_PUBLIC_URL=https://assets.yourdomain.com # Optional: Custom domain for CDN

# Alternative: AWS S3 (more expensive bandwidth costs)
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=true

# Cost Optimization Settings - MAXIMUM SAVINGS MODE
ENABLE_AI_CACHING=true
ENABLE_TTS_BATCHING=true
ENABLE_USAGE_TRACKING=true
ENABLE_LAZY_GENERATION=true

# ULTRA LOW COST: Use cheapest AI models only
GEMINI_MODEL_CHEAP=gemini-1.5-flash-8b    # 50% cheaper than flash
GEMINI_MODEL_EXPENSIVE=gemini-1.5-flash   # Only for critical tasks
USE_CHEAP_MODEL_ONLY=true                 # Force cheapest model always

# AGGRESSIVE RATE LIMITING (prevent cost overruns)
DEFAULT_API_KEY=dev-key-123
RATE_LIMIT_PER_MIN=30                     # Reduced from 60
DAILY_BUDGET_LIMIT_INR=50                 # Reduced from 100
MAX_CONCURRENT_GENERATIONS=2              # Limit parallel processing

# ULTRA CACHING (maximum cache times)
CACHE_GENRES_HOURS=168                    # 7 days
CACHE_PROMPTS_HOURS=24                    # 24 hours  
CACHE_PLANS_HOURS=1                       # 1 hour

# LAZY GENERATION (generate minimal assets)
GENERATE_VIDEO_BY_DEFAULT=false           # Only on request
GENERATE_COVER_ART_BY_DEFAULT=false       # Only on request
VIDEO_QUALITY=720p                        # Lower quality = lower cost
AUDIO_QUALITY=128                         # 128kbps instead of 320kbps

# Content Filtering
PROFANITY_DENYLIST="fuck,shit,bitch"

# MIDI Library Path (optional, for Markov model training)
MIDI_LIBRARY_PATH=./data/midi
